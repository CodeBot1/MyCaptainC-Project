#include <iostream>
using namespace std;

int main()
{
    cout<<"Enter the size of an array: ";
    int n;
    cin>>n;
    int arr[n];
    cout<<"\nEnter element: ";
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
        cout<<endl;
    }
    int *p=arr;
    cout<<"You entered: ";
    for(int i=0;i<n;i++)
    {
        cout<<*p<<endl;
        p++;
    }
    
}
